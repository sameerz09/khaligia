<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="product_barcode_labels">
        <t t-call="web.basic_layout">
            <t t-foreach="docs" t-as="doc">
                <div class="page">
                    <div class="col-4" style="padding: 0; margin: 0;">

                        <t t-set="barcode_info" t-value="get_barcode_details_info" />
                        <table class="table table-borderless"
                               t-attf-style="width: #{barcode_info['label_width']}px; height: #{barcode_info['label_height']}px;">

                            <!-- Header Row: Price and Logo -->
                            <tr>
                                <!-- Price (left-aligned) -->
                                <td style="text-align: left; font-size: 22px; font-weight: bold; padding: 0;">
                                    <span t-field="doc.product_id.list_price" />
                                    <span t-esc="barcode_info['barcode_currency_id'].symbol" />
                                </td>
                                <!-- Logo (right-aligned) -->
                                <td style="text-align: right; padding: 0;">
                                    <img t-att-src="'/web/image/res.company/%s/logo' % request.env.user.company_id.id"
                                         style="width: 3.5cm; height: auto; margin: 0;"
                                         alt="Company Logo" />
                                </td>
                            </tr>

                            <!-- Product Attributes Row -->
                            <tr>
                                <td style="padding: 0; font-size: 18px; font-weight: bold;">
                                    <t t-if="doc.product_id.attribute_line_ids">
                                        <span t-foreach="doc.product_id.product_template_attribute_value_ids" t-as="attribute_value1">
                                            <span t-esc="attribute_value1.name" />
                                            <t t-if="not loop.last">,</t>
                                        </span>
                                    </t>
                                </td>
                                <!-- Product Name (right-aligned) -->
                                <td style="text-align: right; font-size: 18px; font-weight: bold;">
                                    <strong t-field="doc.product_id.name" />
                                </td>
                            </tr>

                            <!-- Barcode Row -->
                            <tr>
                                <td colspan="2" style="padding: 0; text-align: center;">
                                    <img alt="Barcode"
                                         t-att-src="'/report/barcode/?barcode_type=Code128&amp;value=%s&amp;width=%s&amp;height=%s' % (doc.product_id.barcode, 500, 250)"
                                         style="width: 9cm; height: 2cm; margin-top: 10px;" />
                                    <br />
                                    <span t-field="doc.product_id.barcode" style="font-size: 14px; text-align: center; display: block;" />
                                    <span style="display: block; text-align: center; font-size: 10px; color: gray;">www.alkhaligia.com</span>
                                </td>
                            </tr>

                        </table>
                    </div>
                </div>
                <div style="page-break-before: always;" />
            </t>
        </t>
    </template>
</odoo>
