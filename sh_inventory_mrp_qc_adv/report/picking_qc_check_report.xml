<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_qc_check">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.internal_layout">
                    <div class="page">
                        <div class="row">
                            <div class="col-12 mx-auto">
                                <div class="text-center">
                                    <b>
                                        <h4>Quality Check Report</h4>
                                    </b>
                                </div>
                            </div>
                        </div>
                        <br />
                        <table class="table">
                            <thead class="thead-light">
                                <th>Sr.</th>
                                <th>Product</th>
                                <th>Picking Ref.</th>
                                <th>Date</th>
                                <th>QC Point</th>
                                <th>Status</th>
                            </thead>
                            <tbody>
                                <t t-set="count" t-value="0" />
                                <tr t-foreach="o.sh_quality_check_ids" t-as="i">
                                    <t t-if="str(i.state).capitalize() == 'Pass'">
                                        <t t-set="count" t-value="count+1" />
                                        <td style="color: green;"><span t-esc="count" /></td>
                                        <td style="color: green;"><span t-esc="i.product_id.name" /></td>
                                        <td style="color: green;"><span t-esc="i.sh_picking.name" /></td>
                                        <td style="color: green;"><span t-esc="i.sh_date" /></td>
                                        <td style="color: green;"><span t-esc="i.sh_control_point" /></td>
                                        <td style="color: green;"><span t-esc="str(i.state).capitalize()" /></td>
                                    </t>
                                    <t t-else="">
                                        <t t-set="count" t-value="count+1" />
                                        <td style="color: red;"><span t-esc="count" /></td>
                                        <td style="color: red;"><span t-esc="i.product_id.name" /></td>
                                        <td style="color: red;"><span t-esc="i.sh_picking.name" /></td>
                                        <td style="color: red;"><span t-esc="i.sh_date" /></td>
                                        <td style="color: red;"><span t-esc="i.sh_control_point" /></td>
                                        <td style="color: red;"><span t-esc="str(i.state).capitalize()" /></td>
                                    </t>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </t>
            </t>
        </t>
    </template>

    <record id="action_report_picking_qc" model="ir.actions.report">
        <field name="name">QC Check Report</field>
        <field name="model">stock.picking</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">sh_inventory_mrp_qc_adv.report_qc_check</field>
        <field name="report_file">sh_inventory_mrp_qc_adv.report_qc_check</field>
        <field name="binding_model_id" ref="model_stock_picking" />
        <field name="binding_type">report</field>
    </record>
</odoo>
