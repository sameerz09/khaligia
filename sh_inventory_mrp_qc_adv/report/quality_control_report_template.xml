<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="quality_check_doc">
        <t t-call="web.html_container">
            <t t-call="web.basic_layout">
                <div class="page">
                    <div class="oe_structure" />
                    <div class="row">
                        <div class="col-12 mx-auto">
                            <div class="text-center">
                                <b>
                                    <h4>Quality Check Report</h4>
                                </b>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12 mx-auto">
                            <div class="text-center"><b>Date From :</b><span t-esc="date_from" /> <b>To :</b><span t-esc="date_to" /></div>
                        </div>
                    </div>
                    <br />
                    <br />
                    <t t-if="group_by=='picking'">
                        <t t-foreach="picking_qc_list" t-as="picking">
                            <center>
                                <b><t t-esc="picking" /></b>
                            </center>
                            <table class="table">
                                <thead class="thead-light">
                                    <th>Sr.</th>
                                    <th>Product</th>
                                    <th>Date</th>
                                    <th>QC Point</th>
                                    <th>Status</th>
                                </thead>
                                <tbody>
                                    <t t-set="count" t-value="0" />
                                    <t t-foreach="picking_qc_list[picking]" t-as="i">
                                        <tr>
                                            <t t-if="str(i.get('state')).capitalize() == 'Pass'">
                                                <t t-set="count" t-value="count+1" />
                                                <td style="color: green;"><span t-esc="count" /></td>
                                                <td style="color: green;"><span t-esc="i.get('product')" /></td>
                                                <td style="color: green;"><span t-esc="i.get('date')" /></td>
                                                <td style="color: green;"><span t-esc="i.get('control_point')" /></td>
                                                <td style="color: green;"><span t-esc="str(i.get('state')).capitalize()" /></td>
                                            </t>
                                            <t t-else="">
                                                <t t-set="count" t-value="count+1" />
                                                <td style="color: red;"><span t-esc="count" /></td>
                                                <td style="color: red;"><span t-esc="i.get('product')" /></td>
                                                <td style="color: red;"><span t-esc="i.get('date')" /></td>
                                                <td style="color: red;"><span t-esc="i.get('control_point')" /></td>
                                                <td style="color: red;"><span t-esc="str(i.get('state')).capitalize()" /></td>
                                            </t>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                        </t>
                    </t>
                    <t t-if="group_by=='product'">
                        <t t-foreach="product_qc_list" t-as="product">
                            <center>
                                <b><t t-esc="product" /></b>
                            </center>
                            <table class="table">
                                <thead class="thead-light">
                                    <th>Sr.</th>
                                    <th>Picking</th>
                                    <th>Date</th>
                                    <th>QC Point</th>
                                    <th>Status</th>
                                </thead>
                                <tbody>
                                    <t t-set="count" t-value="0" />
                                    <t t-foreach="product_qc_list[product]" t-as="i">
                                        <tr>
                                            <t t-if="str(i.get('state')).capitalize() == 'Pass'">
                                                <t t-set="count" t-value="count+1" />
                                                <td style="color: green;"><span t-esc="count" /></td>
                                                <td style="color: green;"><span t-esc="i.get('picking')" /></td>
                                                <td style="color: green;"><span t-esc="i.get('date')" /></td>
                                                <td style="color: green;"><span t-esc="i.get('control_point')" /></td>
                                                <td style="color: green;"><span t-esc="str(i.get('state')).capitalize()" /></td>
                                            </t>
                                            <t t-else="">
                                                <t t-set="count" t-value="count+1" />
                                                <td style="color: red;"><span t-esc="count" /></td>
                                                <td style="color: red;"><span t-esc="i.get('picking')" /></td>
                                                <td style="color: red;"><span t-esc="i.get('date')" /></td>
                                                <td style="color: red;"><span t-esc="i.get('control_point')" /></td>
                                                <td style="color: red;"><span t-esc="str(i.get('state')).capitalize()" /></td>
                                            </t>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                        </t>
                    </t>
                    <t t-if="group_by==''">
                        <table class="table">
                            <thead class="thead-light">
                                <th>Sr.</th>
                                <th>Product</th>
                                <th>Picking Ref.</th>
                                <th>Date</th>
                                <th>QC Point</th>
                                <th>Status</th>
                            </thead>
                            <tbody>
                                <t t-set="count" t-value="0" />
                                <tr t-foreach="qc_list" t-as="i">
                                    <t t-if="str(i.get('state')).capitalize() == 'Pass'">
                                        <t t-set="count" t-value="count+1" />
                                        <td style="color: green;"><span t-esc="count" /></td>
                                        <td style="color: green;"><span t-esc="i.get('product')" /></td>
                                        <td style="color: green;"><span t-esc="i.get('picking')" /></td>
                                        <td style="color: green;"><span t-esc="i.get('date')" /></td>
                                        <td style="color: green;"><span t-esc="i.get('control_point')" /></td>
                                        <td style="color: green;"><span t-esc="str(i.get('state')).capitalize()" /></td>
                                    </t>
                                    <t t-else="">
                                        <t t-set="count" t-value="count+1" />
                                        <td style="color: red;"><span t-esc="count" /></td>
                                        <td style="color: red;"><span t-esc="i.get('product')" /></td>
                                        <td style="color: red;"><span t-esc="i.get('picking')" /></td>
                                        <td style="color: red;"><span t-esc="i.get('date')" /></td>
                                        <td style="color: red;"><span t-esc="i.get('control_point')" /></td>
                                        <td style="color: red;"><span t-esc="str(i.get('state')).capitalize()" /></td>
                                    </t>
                                </tr>
                            </tbody>
                        </table>
                    </t>
                </div>
            </t>
        </t>
    </template>
    <record id="report_quality_check_action" model="ir.actions.report">
        <field name="name">Quality Check Report</field>
        <field name="model">report.sh_inventory_mrp_qc_adv.quality_check_doc</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">sh_inventory_mrp_qc_adv.quality_check_doc</field>
        <field name="print_report_name">'Quality Check Report'</field>
    </record>
</odoo>
