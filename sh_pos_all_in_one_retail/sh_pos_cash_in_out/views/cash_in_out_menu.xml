                                        <td style="width: 30%; word-break: break-word; vertical-align: middle; padding: 8px 10px;">
                                            <span style="font-size: 13.4px;">
                                                <t t-esc="o.sh_amount" t-options='{"widget": "monetary", "display_currency": o.sh_session.currency_id}' />
                                            </span>
                                        </td>
                                        <td style="width: 30%; word-break: break-word; vertical-align: middle; padding: 8px 10px;">
                                            <span style="font-size: 13.4px;">
                                                <t t-if="o.sh_reason">
                                                    <t t-esc="o.sh_reason" />
                                                </t>
                                                <t t-else="">
