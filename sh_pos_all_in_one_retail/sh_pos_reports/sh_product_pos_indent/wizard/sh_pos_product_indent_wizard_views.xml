<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="sh_pos_product_indent_wizard" model="ir.ui.view">
		<field name="name">sh.pos.product.indent.wizard</field>
		<field name="model">sh.pos.product.indent.wizard</field>
		<field name="arch" type="xml">
			<form string="Point of Sale Product Indent">
				<group>
					<group>
						<field name="sh_start_date"/>
						<field name="sh_partner_ids" widget="many2many_tags" options="{'no_create': True}"/>
						<field name="sh_status" widget="radio"/>
						<field name="sh_session_id" options="{'no_create': True}" required="1"/>
					</group>
					<group>
						<field name="sh_end_date"/>
						<field name="sh_category_ids" widget="many2many_tags" options="{'no_create': True}"/>
						<field name="company_ids" widget="many2many_tags" options="{'no_create': True}" groups="base.group_multi_company"/>
					</group>
				</group>
				<footer>
					<button name="display_report" string="View" class="oe_highlight" type="object" />
                    or
                    <button name="print_report" string="Print" class="oe_highlight" type="object" icon="fa-print" />
                    or
                    <button name="print_xls_report" string="Print In XLS" class="oe_highlight" type="object" icon="fa-file-excel-o" />
                    or
                    <button string="Cancel" class="btn-default" special="cancel" />
                </footer>
			</form>
		</field>
	</record>
	<record id="action_pos_product_indent" model="ir.actions.act_window">
		<field name="name">Point of Sale Product Indent</field>
		<field name="res_model">sh.pos.product.indent.wizard</field>
		<field name="view_id" ref="sh_pos_product_indent_wizard"/>
		<field name="view_mode">form</field>
		<field name="target">new</field>
	</record>
	<menuitem id="sh_pos_product_indent_menuitem" action="action_pos_product_indent" parent="point_of_sale.menu_point_rep" sequence="105" groups="sh_pos_all_in_one_retail.pos_product_indent_groups"/>
</odoo>