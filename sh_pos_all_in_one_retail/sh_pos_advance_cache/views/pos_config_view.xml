<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sh_pos_advance_cache_res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.sh_pos_advance_cache</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <div id="pos_interface_section" position="after">
                <h2>Update Product/customer Info</h2>
                <div class="row mt16 o_settings_container">
                    <div id="category_reference" class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            
                        </div>
                        <div class="o_setting_right_pane" style="white-space: nowrap;">
                            <label for="sh_product_upate" /><br/>
                            <field name="sh_product_upate" widget="radio"/>
                        </div>
                    </div>
                
                    <div id="category_reference" class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            
                        </div>
                        <div class="o_setting_right_pane" style="white-space: nowrap;">
                            <label for="sh_partner_upate" /><br/>
                            <field name="sh_partner_upate" widget="radio"/>
                        </div>
                    </div>
                  </div>
            </div>
        </field>
    </record>
</odoo>